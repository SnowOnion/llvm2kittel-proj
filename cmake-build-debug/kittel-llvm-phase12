FULLNAME=$1
BASENAME=`basename $1 .c`

shift

echo "Calling clang"
/usr/bin/clang -Wall -Wextra -c -emit-llvm -O0 $FULLNAME -o $BASENAME.bc
if [ $? != 0 ]
then
  exit 1
fi

echo "Calling llvm2kittel"
./llvm2kittel $BASENAME.bc $* > $BASENAME.kittel
if [ $? != 0 ]
then
  rm -f $BASENAME.kittel
  exit 2
fi

